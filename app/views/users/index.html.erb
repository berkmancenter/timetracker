<div class="content">
  <h1 class="is-size-1">Users</h1>

  <table class="table">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <%=
            link_to(
              image_tag('time_delete.svg', class: 'timetracker-icon'),
              user_url(id: user.id),
              title: 'Delete this user',
              method: :delete,
              data: { confirm: 'Are you sure?' }
            )
          %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
